{
  "manifest_version": 3,
  "name": "Message Ninja",
  "description": "Personalised messages in one click",
  "version": "0.0.3",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "*://*.messageninja.ai/*"],
      "js": [
        "login.js",
        "initializeUI.js",
        "getProfileInfo.js",
        "sendGPTQuery.js",
        "copyToClipboard.js",
        "storeVariable.js",
        "tagClick.js"
        
        
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "/react/index.js", "/react/vendor.js", "/react/index.css"],
      "matches": ["*://*.linkedin.com/*", "*://*.messageninja.ai/*"]
    }
  ],
  "background": {  
    "service_worker": "background.js"
  }
}
